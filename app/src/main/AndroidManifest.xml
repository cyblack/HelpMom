<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.androidtown.helpmom">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PerformTaskActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog"
            ></activity>
        <activity
            android:name=".TaskResultActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name=".EvaluateActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GroupActivity" />
        <activity
            android:name=".RoomCreateActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity android:name=".LobbyActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".ManageTaskActivty"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".RoomJoinActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
    </application>

</manifest>