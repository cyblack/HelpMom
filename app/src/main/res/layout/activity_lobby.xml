<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/linearLayout_Lobby1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="right">

        <TextView
            android:id="@+id/txtView_lobby_userID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="아이디"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtView_lobby_userNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="별명"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_Lobby2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout_Lobby1">

        <Button
            android:id="@+id/btn_createRoom"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="그룹 생성"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_joinRoom"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="그룹 가입"
            android:textSize="18dp" />
    </LinearLayout>



    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/txtView_showRoomList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout_Lobby2"
        android:text="그룹 목록"
        android:textSize="22dp" />

    <ListView
        android:id="@+id/listView_roomList"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_below="@+id/txtView_showRoomList"/>

</RelativeLayout>